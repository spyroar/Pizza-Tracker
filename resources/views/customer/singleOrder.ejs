 <section class="status">

      <div class="container auto-mx">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                 <h1 class="font-bold text-xl">Track Delivery Status</h1>
                 <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-sx"><%= order._id%></h6>
                 <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order)%>">
            </div>

             <ul>
                <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line text-xl pb-16" data-status="confirmed"><span>Order Conformation</span></li>
                <li class="status_line text-xl pb-16" data-status="prepared"><span>Prepration</span></li>
                <li class="status_line text-xl pb-16" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status_line text-xl"><span data-status="completed">Complete</span></li>
             </ul>
        </div>
      </div>
 </section>