<section class="cart py-16">

     <% if(session.cart){ %>

      <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-500 pb-4">
          <img src="img/black.png" alt="image" class="h-8 w-8" />
          <h1 class="font-bold text-lg ml-4">Order Summary</h1>
        </div>
        <div class="pizza-list">
          <% for(let pizza of Object.values(session.cart.items)) { %>
          <div class="flex items-center my-8">
            <img src="img/<%= pizza.item.image %>" alt="" class="w-24" />
            <div class="ml-4 flex-1">
              <h1><%=pizza.item.name%></h1>
              <span><%=pizza.item.size%></span>
            </div>
            <spn class="flex-1"><%=pizza.qty%></spn>
            <spn class="font-bold text-lg"><%=pizza.item.price * pizza.qty%></spn>
          </div>
          <% } %>
        </div>
        <hr />
        <div class="text-right py-4">
          <div>
            <span class="font-bold text-lg">Total Amount:</span>
            <span class="amount text-2xl font-bold ml-2"
              ><%= session.cart.totalPrice %></span
            >
          </div>
          <% if(user) { %>
          <div>
            <form action="/orders" method="POST" class="mt-12" id="payment-form">
              <div class="relative w-1/2 ml-auto mb-4">
                <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                 
                  <option value="cod">Cash on Delivery</option>
                  <option value="card">Pay with Card</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                  <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                </div>
              </div>

              <input
                class="border border-gray-400 p-2 w-1/2"
                type="text"
                placeholder="phone Number"
                name="phone"
              />
              <input
                class="border border-gray-400 p-2 w-1/2 mt-2"
                type="text"
                placeholder="address"
                name="address"
              />
              <div class="mt-4">

                    <div id="card-element"></div>
                <button type="submit" class="btn-primary mt-6 px-6 py-2 rounded-full text-white font-bold">Order Now</button>
              </div>
            </form>
          </div>
          <% } else { %>
          <a
            href="/login"
            class="inline-block cursor-pointer btn-primary mt-6 px-6 py-2 rounded-full text-white font-bold"
            >Login to Continue</a>
            <% } %>
        </div>
      </div>

         <% } else { %>

         <div class="empty-cart py-16">
          <div class="container mx-auto text-center">
            <h1 class="text-3xl font-blod mb-2">Cart Empty</h1>
            <p class="text-gray-500 text-lg mb-12">
              Lorem ipsum, dolor sit amet consectetur adipisicing elit. Inventore,
              dicta numquam? <br />
              Nesciunt porro id cupiditate adipisci et non? Eaque temporibus
              accusantium ipsum <br />
              repudiandae ex in labore tempore voluptate. Saepe, aspernatur!
            </p>
            <img
              src="img/empty-cart.jpg"
              alt="empty-cart-image"
              class="w-2/5 mx-auto"
            />
            <a
              href="/"
              class="inline-block px-6 py-2 my-12 rounded-full btn-primary font-bold text-white"
              >Go Back</a
            >
          </div>
        </div>

         <% } %>
  
 
</section>
